extends template.pug

prepend head
  link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    
block title
  =concert + " Control Panel"

block content
  form.form-group
    label(for="password") Password for control
    input#password.form-control(type=text,autocomplete='off')

  .container.controlpanel(style="display:none")
    #controls
      #states
        h2 States
        .list-group
          each state, index in otherStates
            a.list-group-item-action.list-group-item.list-group-item-primary(data-selector=`state-${index}` , href="#")= state.controls
      
      #pieces
        h2 Pieces
        .list-group
          each piece, index in pieces
            if piece.composer && piece.arranger
              - var comp = `${piece.composer} arr. ${piece.arranger}`
            else if piece.composer
              - var comp = piece.composer
            else if piece.arranger
              - var comp = `arr. ${piece.arranger}`
            a.list-group-item.list-group-item-action.list-group-item-secondary(href="#", data-selector=`piece-${index}`)= `${piece.title}: ${comp}`
              
          
      
      #committee
        h2 Committee
        .list-group
          a.list-group-item.list-group-item-action.list-group-item-primary(href="#", data-selector=`conductor` )= `${conductor.name} (Conductor)`
          each person, index in committee
            a.list-group-item.list-group-item-action.list-group-item-primary(href="#", data-selector=`committee-${index}` )= `${person} (${index})`  
append scripts
  script(src='/socket.io/socket.io.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js')
  script(src='/scripts/control-panel.js')
