extends template

block title
  =concert + " Control Panel Login"

block content
  form.form-group.login-form(action="/login", method="POST")
    if message
        .error-message
          p.text-center=message

    p To sign up and gain admin access, you must provide the Registration Key
    label(for="username") Username
    input#username.form-control(name="username",type='text',autocomplete='off',required)
    label(for="password") Password
    input#password.form-control(name="password",type='password',autocomplete='off',required)
    label(for="secretkey") Admin Registration Key
    input#secretkey.form-control(name="secretkey",autocomplete='off')
    button(type=submit) login or signup
