doctype html
html(lang='en')
  head
  block head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(rel='stylesheet', href="css/base.css")
    meta(name='viewport', content='width=1920px, initial-scale=1, shrink-to-fit=no')
    title= concert + " overlay"

  body
    #charity
      p= `We are raising money at the interval of this concert for ${charity.name} (${charity['registration number']}). If you're watching this stream, please consider donating the amount you would've paid for a ticket (${price}) to them or an equivalent charity in your area!` 
      p= `Their website is ${charity.url} where a direct donation can be made.`
    
    #omnibar
      #logo
        
      .central-item
        #nowplaying.vstack.hidden
          span#title
          span#composer
        #other-states
        
      .vstack
        span#concert-title=concert
        span#conductor=conductor
          
          
    block scripts 
      script(src='/socket.io/socket.io.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js')
      script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
      script(src="scripts/omnibar.js")
